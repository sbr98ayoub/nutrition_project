<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SleepActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/sleep_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Good Sleep Practices"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:textColor="@color/purple" />

            <TextView
                android:id="@+id/sleep_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sleep is vital for overall health and well-being. Here are some tips to ensure you get a good night's sleep:\n\n1. Maintain a consistent sleep schedule.\n2. Create a restful sleeping environment.\n3. Limit exposure to screens before bedtime.\n4. Avoid large meals and caffeine before sleeping.\n5. Exercise regularly but not too close to bedtime."
                android:textSize="18sp"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
